<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_login"
        tools:text="Login test"
        android:textSize="28sp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_email"
        tools:text="Email test"
        android:textSize="28sp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_exit"
        android:padding="16dp"
        android:textColor="#fff"
        android:background="@drawable/back_button_red"
        android:text="@string/exit_from_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Мои объявления"
        android:background="@drawable/back_button_red"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textColor="#fff"
        android:onClick="myAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Правила пользования"
        android:background="@drawable/back_button_red"
        android:padding="16dp"
        android:textColor="#fff"
        android:onClick="rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>